    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.susu.baselibrary.view.customerview.titlebar.FixedScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4F5F7"
            android:orientation="vertical">

            <com.susu.baselibrary.view.customerview.textview.MyTextView
                android:id="@+id/myTextView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="abcd"
                android:textColor="#000"
                android:textSize="20sp" />


            <com.susu.baselibrary.view.customerview.textview.TestTextView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="10dp" />

            <com.susu.baselibrary.view.customerview.textview.StrokeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eee"
                android:gravity="right"
                android:text="18"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <com.susu.baselibrary.view.customerview.CoinView
                android:id="@+id/viewCoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="一键领取" />

            <com.susu.baselibrary.view.customerview.NumberFlipView1
                android:id="@+id/viewNumberFlip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#55ff0000"
                android:text="123" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:indeterminateOnly="false"
                android:progress="0"
                android:progressDrawable="@drawable/base_demo_bg_progress_bar" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>