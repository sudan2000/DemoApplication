<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleBar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <!-- 设置该属性解决空白部分-->
    </style>

    <style name="Base.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#00000000</item>
        <item name="toolbarStyle">@style/TitleBar</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BaseCustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">#00FFFFFF</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTextViewCoinNum">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#232833</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BaseTextViewCoin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">6dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#232833</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/view_coin_sign_icon_bg</item>
        <item name="android:drawableTop">@drawable/view_coin_sign_icon_gray</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="BasePermission">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BasePermissionActivity" parent="BasePermission">
        <item name="android:windowFullscreen">true</item>
    </style>


</resources>