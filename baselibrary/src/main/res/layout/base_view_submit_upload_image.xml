<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_image_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:padding="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_add_image"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_upload_img"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/base_icon_add_pic_unfocused" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="上传照片 (最多9张)"
                android:textColor="#5E616B"
                android:textIsSelectable="false"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="10dp"
                android:text="照片仅自己和对方可见"
                android:textColor="#9D9EA7"
                android:textIsSelectable="false"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>